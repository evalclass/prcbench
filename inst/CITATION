citHeader("To cite precrec in publications use:")

citEntry(entry = "Article",
  title        = "Precrec: fast and accurate precision-recall and ROC curve calculations in R",
  author       = personList(as.person("Takaya Saito"),
                   as.person("Marc Rehmsmeier")),
  journal      = "Bioinformatics",
  year         = "2016",
  doi          = "10.1093/bioinformatics/btw570",

  textVersion  =
  paste("Takaya Saito and Marc Rehmsmeier (2016).",
        "Precrec: fast and accurate precision-recall and ROC curve calculations in R.",
        "Bioinformatics.",
        "doi: 10.1093/bioinformatics/btw570")
)
